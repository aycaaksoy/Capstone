@using EntityLayer.Concrete;
@model Announcement

@{
    ViewData["Title"] = "UpdateAnnouncement";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-body">
    <h1>Update Announcement</h1>
<form method="post"> 
    <input type="hidden" asp-for="PostId" />
    <label>Annoncement Title</label>
    <input type="text" asp-for="Title" class="form-control" />
    <span asp-validation-for="Title" class="text-danger"></span>
    <br />

    <label>Annoncement Content</label>
    <input type="text" asp-for="Body" class="form-control" />
    <span asp-validation-for="Body" class="text-danger"></span>
    <br />

    <label>Annoncement Date Posted</label>
    <input type="text" asp-for="TimePosted" class="form-control" />
    <span asp-validation-for="TimePosted" class="text-danger"></span>
    <br />

    <button type="submit" class="btn btn-outline-dark">Submit</button>
</form>
</div>
</div>


